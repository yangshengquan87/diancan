.ad_img {
  width: 100%;
  height: 180rpx;
}
.ad_img image {
  display: block;
  width: 100%;
  height: 100%;
}
.recharge {
  width: 100%;
  margin-top: 20rpx;
  padding: 20rpx 0;
  background: #ecfafa;
  text-align: center;
}
.recharge image {
  width: 88rpx ;
  height: 74rpx;
  margin: 0 auto;
}
.recharge .sum {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
.recharge .sum .sum_num {
  font-size: 30rpx;
  color: #333;
}
.recharge .sum .sum_num text {
  color: #ff2b4d;
  font-size: 47rpx;
}
.recharge .sum .charge_btn {
  width: 160rpx;
  height: 48rpx;
  border: 1rpx solid #ff6b12;
  color: #ff6b12;
  font-size: 30rpx;
  line-height: 48rpx;
  margin-left: 30rpx;
  -webkit-border-radius: 5rpx;
  -moz-border-radius: 5rpx;
  border-radius: 5rpx;
}
.deal_details_title {
  width: 100%;
  padding: 0 4%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  color: #333;
  font-size: 30rpx;
  height: 78rpx ;
  line-height: 78rpx ;
  margin-top: 20rpx ;
  background: #f5f5f9;
  font-weight: bold;
}
.deal_details_container {
  width: 100%;
}
.deal_details_container .deal_details {
  width: 100%;
  padding: 0 4%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ececec;
  height: 151rpx ;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}
.deal_details_container .deal_details .deal_details_left text {
  display: block;
}
.deal_details_container .deal_details .deal_details_left text:last-of-type {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}
.charge_container{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5)
}
.charge_content{
  width: 92%;
  height:590rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
   margin: auto;
  background: #fff;
  border-radius: 5rpx;
}
.tel_title {
  width: 97%;
  margin: 0 auto;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  position: relative;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 40rpx;
}
.tel_title text {
  position: absolute;
  top: 15%;
  right: 10rpx;
  color: #888;
  font-size: 40rpx;
}
.select_num{
  width: 100%;
  padding: 0 4%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;

}
.select_num text{
  padding: 27rpx 13rpx;
  color: #666;
  font-size: 26rpx;
  display: block;
  border: 1rpx solid #666;
  border-radius: 5rpx;
}
.select_num text.active{
  background: #42adae;
  border: none;
  color: #fff;
}
.ipt_num{
   width: 100%;
  padding: 0 4%;
  box-sizing: border-box;
  display: flex;
    justify-content: space-around;
  align-items: center;
  margin-top:40rpx 
}
.ipt_num text{
  color: #333;
  font-size: 28rpx;
}
.ipt_num input{
  width: 490rpx;
  height: 80rpx;
  border: 1rpx solid #666;
  border-radius: 5rpx;
  font-size: 24rpx;
}
.tips{
   width: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  text-align: left;
  color: #888;
  font-size: 20rpx;
  margin-top: 10rpx;
  
}
.btn_container {
  width: 92%;
  margin: 40rpx auto;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn_container view {
  width: 280rpx;
  height: 80rpx;
  color: #333;
  font-size: 30rpx;
  border-radius: 5rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
}
.btn_container view.cancel_btn {
  border: 1rpx solid #ddd;
}
.btn_container view.ensure {
  background: #ff6b12;
  color: #fff;
}